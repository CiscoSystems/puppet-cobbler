# Cobbler generated configuration file for dnsmasq
# $date 
#

# resolve.conf .. ?
#no-poll
#enable-dbus
read-ethers
addn-hosts = /var/lib/cobbler/cobbler_hosts
domain=<%= domain_name %>

<%- if dhcp_ip_low %>
dhcp-range=<%= dhcp_ip_low %>,<%= dhcp_ip_high %>
<%- else %>
dhcp-range=<%= node_subnet %>,static,<%= node_netmask %>
<%- end %>
<%-if node_gateway %>
dhcp-option=3,<%= node_gateway %>
<%-else %>
dhcp-option=3
<%-end %>
dhcp-lease-max=1000
dhcp-authoritative
dhcp-boot=pxelinux.0
dhcp-boot=net:normalarch,pxelinux.0

$insert_cobbler_system_definitions

